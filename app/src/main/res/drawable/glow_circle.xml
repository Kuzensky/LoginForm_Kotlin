<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:startColor="#8B5CF6"
                android:endColor="#6366F1"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
